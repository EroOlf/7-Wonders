<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.the7wonders.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Slider fx:id="nbPlayersSlider" blockIncrement="1" layoutX="26.0" layoutY="32.0" majorTickUnit="1" max="7" minorTickCount="1" showTickLabels="true" showTickMarks="true" />
    <Button text="Submit!" onAction="#onHelloButtonClick"/>
</VBox>
